

@page "/7"
<PageTitle>ChooseSpecialist</PageTitle>

<div class="container">
    <h2 class="text-center">Выбрать специалиста</h2>
    <div class="border p-2 mb-3 text-center">
        <button class="btn btn-light w-100 border">Любой специалист</button>
    </div>

    @foreach (var specialist in specialists)
    {
        <div class="row mb-2">
            <div class="col-3 border p-2 text-center">
                Фото
            </div>
            <div class="col-9 border p-2">
                <p>@specialist.Name <span class="pale">@specialist.Profession</span></p>
                <p>Звёзды <span class="pale">@specialist.Reviews отзывов</span></p>
            </div>
        </div>
    }
</div>

<style>
    .pale {
        color: rgba(0, 0, 0, 0.5);
    }
</style>

@code {
    private List<Specialist> specialists = new List<Specialist>()
    {
        new Specialist { Name = "Иван", Profession = "Мойщик автомобилей", Reviews = 3 },
        new Specialist { Name = "Петр", Profession = "Автомаляр", Reviews = 5 },
        new Specialist { Name = "Сергей", Profession = "Автомеханик", Reviews = 2 },
        new Specialist { Name = "Дмитрий", Profession = "Автодиагност", Reviews = 4 },
        new Specialist { Name = "Алексей", Profession = "Шиномонтажник", Reviews = 1 }
    };

    private class Specialist
    {
        public string Name { get; set; }
        public string Profession { get; set; }
        public int Reviews { get; set; }
    }
}